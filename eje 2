class Circulo:
    radio = ""
    area = 0
    perimetro = 0
    pi = 3.14
    
    def __init__(self,radio):
        self.radio = radio
        
  
    def calcular_area(self):
        self.area = self.pi * self.radio 
        print("el area de un circulo es",self.area)
        
    def calcular_perimetro(self):
        self.perimetro = 2 * self.pi * self.radio 
        print("el perimetro de un circulo es",self.perimetro)
b = Circulo(5)
print(b.radio)
b.calcular_area()
b.calcular_perimetro()

